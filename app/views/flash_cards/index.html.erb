<h1>All Flash Cards:</h1>
<%= link_to 'New Flash Card', new_flash_card_path %>

<table>
  <tr>
    <th>Prompt</th>
    <th>Answer</th>
    <th colspan="3"></th>
  </tr>

  <% @flash_cards.each do |flash_card| %>
    <tr>
      <td><%= flash_card.prompt %></td>
      <td><%= flash_card.answer %></td>
      <td><%= link_to 'Show', flash_card_path(flash_card) %></td>
      <td><%= link_to 'Edit', edit_flash_card_path(flash_card) %></td>
      <td><%= link_to 'Delete', flash_card_path(flash_card),
              method: :delete,
              data: { confirm: 'Are you sure you wish to delete this flash card?' } %></td>
    </tr>
  <% end %>
</table>
